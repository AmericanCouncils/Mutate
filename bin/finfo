#!/usr/bin/env php
<?php

require(__DIR__."/../vendor/.composer/autoload.php");

if(!isset($argv[1])) {
	throw new InvalidArgumentException("You must specify a file path to test.");
}

$file = new AC\Mutate\File(realpath($argv[1]));

echo PHP_EOL."File info:".PHP_EOL;
echo "Path: ".$file->getRealPath().PHP_EOL;
echo "Size: ".$file->getSize()." bytes".PHP_EOL;
echo "Full Mime: ".$file->getMime().PHP_EOL;
echo "Mime Type: ".$file->getMimeType().PHP_EOL;
echo "Mime Encoding: ".$file->getMimeEncoding().PHP_EOL.PHP_EOL;
